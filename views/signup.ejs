<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/manipulado.css" />
        <link rel="stylesheet" href="css/index.css" />
        <link rel="stylesheet" href="css/auth.css" />
        <%- include('includes/dependencies-top.ejs') %>
        <title>Autenticação</title>
    </head>

    <body>
        <%- include('includes/navigation.ejs') %>
        <div class="container auth-form-container">
            <div class="user-messages hide"></div>
            <h1><i class="fas fa-user-plus"></i></i> Registar</h1>
            <hr />
            <!-- Login Form -->
            <form class="auth-form">
                <h5>Introduza as suas credenciais de acesso</h5>
                <input
                    type="email"
                    id="email"
                    class="email-signup form-control"
                    name="email-signup"
                    placeholder="email"
                />
                <input
                    type="text"
                    id="password"
                    class="password-signup form-control"
                    name="password"
                    placeholder="password"
                />
                <input
                    type="text"
                    id="confirmPassword"
                    class="password-signup-confirm form-control"
                    name="password-signup-confirm"
                    placeholder="password"
                />
                <input type="submit" class="signup btn btn-primary" value="Sign Up" />
            </form>
        </div>
        <%- include('includes/dependencies-bottom.ejs') %>
    </body>
</html>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/manipulado.css" />
        <link rel="stylesheet" href="css/table.css" />
        <%- include('includes/dependencies-top.ejs') %>
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js" type="text/javascript"></script>
        <title>Menu Principal</title>
    </head>

    <body>
        <%- include('includes/navigation.ejs') %>
        <div class="container">
            <h1>Manipulados</h1>
            <hr />
            <div class="table-container">
                <form action="POST" class="table-form">
                <table
                    id="listaManipulados"
                    class="table table-striped table-bordered table-sm"
                >
                    <thead>
                        <tr>
                            <th class="th-sm">Nome</th>
                            <th class="th-sm">Forma Farmacêutica</th>
                            <th class="th-sm">Utente</th>
                            <th class="th-sm">Farmacêutico</th>
                            <th class="th-sm">Data</th>
                        </tr>
                        
                    </thead>
                    <tbody>
                        <% for (let i=0; i<resultado.length ;i++) {  %> 
                        <tr class="manip-<%= resultado[i]._id  %>"> 
                            <td><%= resultado[i].nomeManipulado %></td>
                            <td><%= resultado[i].fFarmNome %></td>
                            <td><%= resultado[i].utenteNome %></td>
                            <td><%= resultado[i].farmaceuticoNome %></td>
                            <td class="date"><%= resultado[i].createdAt %></td>
                            <td><button class="btn btn-primary" type="submit">Ver</button></td>
                            <td><button class="btn btn-warning" type="submit">Editar</button></td>
                            <td><button class="btn btn-danger" type="submit">Eliminar</button></td>                       
                        </tr>
                        <% } %> 
                    </tbody>
                  </table>
                </form>
            </div>
            <hr />
        </div>
        <script type="module" src="js/arquivo/arquivo.js"></script>
    </body>
</html>
